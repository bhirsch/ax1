    $node->ssl = ($site['ssl']) ? $site['ssl'] : 0;
    $node->ssl_redirect = ($site['ssl_redirect']) ? $site['ssl_redirect'] : 0;
    $node->redirection = (isset($site['redirection'])) ? $site['redirection'] : 1;
    $node->build_mode = ($site['build_mode']) ? $site['build_mode'] : 0;
  
