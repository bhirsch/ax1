  if ($key == $valid_key) {
    
    // new node object
    $node = new stdClass();

    // hard coded for site nodes
    $node->type = 'site';

    // required fields
    $node->title = $site['title'];       // domain
    $node->client = (isset($site['client'])) ? $site['client'] : 1;
